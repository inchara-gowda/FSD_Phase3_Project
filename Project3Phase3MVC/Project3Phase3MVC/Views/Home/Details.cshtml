@model DotNet_Phase3_Project.Models.Product
@{

    ViewBag.Title = "Details";
}
<link href="~/css/DetailsProduct.css" rel="stylesheet" />

<div class="container mt-5 mb-5">
    <div class="card">
        <div class="row g-0">
            <div class="col-md-6 border-end">
                <div class="d-flex flex-column justify-content-center">
                    <div class="main_image"> <img src=@Model.Image id="main_product_image" width="350"> </div>
                </div>
                
            </div>
            
            <div class="col-md-6">
                <div class="p-3 right-side">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3>@Model.Name</h3>
                    </div>
                    <div class="mt-2 pr-3 content">
                        <p>@Model.Description</p>
                    </div>
                    <h3>$@Model.Price</h3>

                    <div class="buttons d-flex flex-row mt-5 gap-3"> <button class="btn btn-outline-dark"><a href="/home/order/@Model.ProductID">Buy Now</a></button> </div>

                </div>
            </div>
        </div>
    </div>
</div>

